extends ../ui_layout

block content
  
  .ui.text.container.addBottomMargin
    br
    .ui.raised.segment
      h2.ui.header
        .content What should you do if you accidentally fall for a phishing scam? 
          br
          br
        #hiddenEye.content.grayElement
          .sub.header 
            .ui.compact.segment
              .ui.large.read-only.checked.checkbox.exampleCheckbox
                input.ui(type="checkbox" id="" checked="")
                label Read and check all the boxes below
            br

      .content.ui.list
          .item
            #item1.ui.segment
              .ui.large.checkbox#checkbox1
                input.ui(type="checkbox" id="")
                label 
                  | If you have given a phishing website your password, 
                  | change your password immediately. And if you used the same 
                  | password with other accounts, change those passwords too!
          .item
            #item2.ui.segment
              .ui.large.checkbox#checkbox2
                input.ui(type="checkbox"  id="")
                label 
                  | Report the phishing post to the website so it can be 
                  | taken down.
          .item
            #item3.ui.segment
              .ui.large.checkbox#checkbox3
                input.ui(type="checkbox"  id="")
                label 
                  | Tell a trusted adult. They can help you take the right steps 
                  | to protect your information.
                  
    br
    .ui.warning.message#checkAllWarning
      .header
        | Check all the boxes to proceed
    .ui.big.labeled.icon.button#phishingTutGuideButton
        i.rocket.icon
        |   Got it!

block scripts
  script(src="/module_js/phishing/phishing_tut_guide.js")
  
block styles 
  link(rel='stylesheet', href='/css/modules/phishing.css')
  link(rel='stylesheet' href='/css/checkbox_activity.css')  
