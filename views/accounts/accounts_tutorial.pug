extends ../ui_layout

block content

  -var cdn = "https://dhpd030vnpk29.cloudfront.net";

  .computer.only.tablet.only.four.wide.column

  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column
    .ui.one.column.centered.grid(style="margin-bottom:1em;")
      .ui.fixed.bottom.sticky(style="margin-bottom:4em; width:400px; max-width:100%; z-index:10000000;")
        .ui.icon.compact.hidden.message.warning#clickNextHelpMessage
          i.close.icon
          i.question.icon.float
          .content
            .ui.header Need some help?
            p Scroll up and click "Next" to begin!
    .ui.raised.segment#generalStep
      h2.ui.header Create An Account
      .ui.form(style="font-size: 130%;")
        .field#usernameStep
          label Username
          input(type="text" disabled="" name='username' placeholder="username")
        .field#passwordStep
          label Password
          input(type="password" disabled="" name="password" placeholder="password" onfocus="$(this).removeAttr('readonly');")    

    button.ui.big.labeled.icon.button.addBottomMargin#continueTutorial
        i.rocket.icon
        |   Let's Continue!      
          
block scripts
  script(src="/module_js/accounts/accounts_tutorial.js")
